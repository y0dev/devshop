doctype html
html.scroll-pt-36.overflow-hidden.scroll-smooth
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description",content="Ecommerce Template")
    meta(name="keywords",content="Ecommerce, Template, SaaS")
    meta(name="author", content="Devontae Reid")
    meta(property="og:title",content="Devontae's Ecommerce Template")
    meta(property="og:description",content="Ecommerce Template")
    meta(property="og:image",content="https://www.devsite.com/images/urban-insight.png")
    meta(property="og:url", content="https://www.devsite.com")
    meta(property="og:type", content="website")
    meta(name="twitter:card", content="summary_large_image")
    meta(name="twitter:title",content="Devontae's Ecommerce Template")
    meta(name="twitter:description",content="Ecommerce Template")
    meta(name="twitter:image",content="https://www.devsite.com/images/urban-insight.png")
    meta(name="twitter:site", content="@urbaninsight")
    meta(name="twitter:creator", content="@yourusername")
    link(rel="shortcut icon",href="/img/favicon/favicon.ico",type="image/x-icon")
    link(rel="stylesheet",href="https://fonts.googleapis.com/css?family=Lato:300,300i,700,900")
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
    link(href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css",rel="stylesheet")
    link(rel="stylesheet", href="/css/style.css")
    title Dev's Ecommerce | #{ title }

  body.bg-white.body-font.relative.text-gray-700
    main
      // HEADER
      include _header

      // CONTENT
      block content
        h1 This is a placeholder heading

      // FOOTER
      include _footer

      //- Cookie Popup
    cookie.cookie-popup.absolute.bottom-50.left-4.p-8.bg-white.max-w-sm.rounded-2xl.text-center.capitalize.shadow-md 
      img.mx-auto.max-w-24(src="/img/cookie.png", alt="")
      .container
        .content.mt-5
          header Cookie Consistent
          p.normal-case.mt-2.mb-4 This website use cookies to ensure you get the best experience on our website.
          .button-container.flex.items-center.justify-center
            button.mx-4.px-8.py-4.rounded-xl.bg-primary.font-medium.transition-all.ease-in-out(class="hover:scale-90") I understand
            a.mx-4.text-primary(href="#") learn more

    script(src="/js/bundle.js")
